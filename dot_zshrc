# You may need to manually set your language environment
# export LANG=en_US.UTF-8
source_if_exists () {
    if test -r "$1"; then
        source "$1"
    fi
}

# prompt
PS1="%F{#008000}%n@%m %F{#3a3a3a}%1~ %f"

export EDITOR='nvim'
export GITUSER="mngste"
export WORKSPACE=$HOME/workspace
export DOTFILES=$HOME/.local/share/chezmoi
export SCRIPTS="$WORKSPACE/scripts"
export TERM=screen-256color
export XDG_CONFIG_HOME=$HOME/.config

# ## HISTORY ##
# #############
# HISTFILE=$HOME/.zsh_history
# HISTSIZE=50000
# SAVEHIST=50000

# setopt EXTENDED_HISTORY
# setopt HIST_VERIFY
# setopt HIST_EXPIRE_DUPS_FIRST    # Expire duplicate entries first when trimming history.
# setopt HIST_IGNORE_DUPS          # Dont record an entry that was just recorded again.
# setopt HIST_IGNORE_ALL_DUPS      # Delete old recorded entry if new entry is a duplicate.
# setopt HIST_FIND_NO_DUPS         # Do not display a line previously found.
# setopt HIST_IGNORE_SPACE         # Dont record an entry starting with a space.
# setopt HIST_SAVE_NO_DUPS         # Dont write duplicate entries in the history file.

## ALIASES DIRECTORIES ##
source_if_exists "$HOME/zsh-alias/aliases.zsh"

## PATH ##
export PATH=$HOME/bin:$SCRIPTS:$PATH
export GOROOT=/usr/local/go
export GOPATH=$HOME/go
export LOCAL_BIN=$HOME/.local
export PATH=$GOPATH/bin:$GOROOT/bin:$LOCAL_BIN/bin:$PATH

## ZSH PLUGINS ##
# Source usefulsh plugins
source ~/.zsh/zsh-autosuggestions/zsh-autosuggestions.zsh
source ~/.zsh/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

# ~~~~~~~~~~~~~~~ Completion ~~~~~~~~~~~~~~~~~~~~~~~~

fpath+=~/.zsh/zsh-completitions/src
fpath+=~/.zfunc

autoload -Uz compinit
compinit -u

zstyle ':completion:*' menu select

if command -v tmux &> /dev/null && [ -z "$TMUX" ]; then
  tmux attach-session -t default || tmux new-session -s default
fi
