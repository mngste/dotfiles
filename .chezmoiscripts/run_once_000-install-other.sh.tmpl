{{- if and (.is_debian) (not (.is_devpod)) -}}
#!/usr/bin/env bash

echo "Installing other applications..."

# install devpod
curl -L -o devpod "https://github.com/loft-sh/devpod/releases/latest/download/devpod-linux-amd64" && sudo install -c -m 0755 devpod /usr/local/bin && rm -f devpod
# devpod options
devpod provider add docker
devpod provider use docker
devpod context set-options -o DOTFILES_URL=https://github.com/mngste/dotfiles
devpod ide use none


# install fresh
curl https://raw.githubusercontent.com/sinelaw/fresh/refs/heads/master/scripts/install.sh | sh


{{- else if .is_arch_like -}}
#!/usr/bin/env bash

echo "Installing applications from Pacman..."

sudo pacman -S --noconfirm curl htop tmux
{{- end -}}
